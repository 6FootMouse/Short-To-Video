{
    "manifest_version": 2,
    "name": "Short to Video",
    "version": "1.0",
    "description": "Open a new tab of the youtube short you're currently on but as a video.",
    "permissions": ["activeTab"],
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "icons": {
      "48": "icon.png"
    }
  }